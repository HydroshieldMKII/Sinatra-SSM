<div class="nav">
  <span>Welcome, <%= current_user['username'] %></span>
  <a href="/dashboard">Dashboard</a>
  <a href="/users">Users</a>
  <form method="post" action="/logout" style="float: right;">
    <input type="hidden" name="csrf_token" value="<%= csrf_token %>">
    <button type="submit">Logout</button>
  </form>
</div>
<div class="container">
  <h2>Create User</h2>
  <% if local_variables.include?(:message) && message %>
    <div class="<%= success ? '' : 'error' %>"><%= message %></div>
  <% end %>
  <form method="post" action="/users">
    <% if csrf_token %>
      <input type="hidden" name="csrf_token" value="<%= csrf_token %>">
    <% end %>
    <input type="text" name="username" placeholder="Username" required>
    <input type="password" name="password" placeholder="Password (12+ chars, mixed case, number, special)" required>
    <button type="submit">Create User</button>
  </form>
</div>