<div class="nav">
  <span>Welcome, <%= current_user['username'] %></span>
  <a href="/dashboard">Dashboard</a>
  <a href="/users">Users</a>
  <form method="post" action="/logout" style="float: right;">
    <% if csrf_token %>
      <input type="hidden" name="csrf_token" value="<%= csrf_token %>">
    <% end %>
    <button type="submit">Logout</button>
  </form>
</div>
<div class="container">
  <h2>Dashboard</h2>
  <p>User ID: <%= current_user['id'] %></p>
  <p>Created: <%= Time.at(current_user['created_at']).strftime('%Y-%m-%d %H:%M') %></p>
  <% if current_user['last_login'] %>
    <p>Last login: <%= Time.at(current_user['last_login']).strftime('%Y-%m-%d %H:%M') %></p>
  <% end %>
</div>